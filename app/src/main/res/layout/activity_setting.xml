<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".UI.SettingActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="74dp"
        android:paddingTop="24dp"
        >

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/iv_back"
            android:src="@mipmap/ic_cancel"
            android:scaleType="center"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="设置"
            android:gravity="center"
            android:textSize="16sp"
            android:layout_marginLeft="50dp"
            android:textColor="@color/text_black"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="保存"
            android:id="@+id/tv_save"
            android:gravity="center"
            android:layout_gravity="right"
            android:textSize="16sp"
            android:layout_marginRight="20dp"
            android:textColor="@color/text_black"
            />

    </FrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_300"
        />



    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="16dp"
        >



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="相机类型："
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="16dp"
                />

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_camera_1"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera1"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:switchMinWidth="20dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:checked="true"
                    android:id="@+id/switch_camera_1"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_camera_2"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Camera2"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:switchMinWidth="20dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:checked="false"
                    android:id="@+id/switch_camera_2"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合成类型："
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_muxer_gpu"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MediaMuxer"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:switchMinWidth="20dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:checked="true"
                    android:id="@+id/switch_muxer_gpu"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_300"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_muxer_cpu"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="FFmpegMuxer"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:switchMinWidth="20dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:checked="false"
                    android:id="@+id/switch_muxer_cpu"
                    />

            </FrameLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_400"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linear_file"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="视频后缀："
                    android:textSize="14sp"
                    android:textColor="@color/text_black"
                    android:layout_marginTop="15dp"
                    android:layout_marginLeft="16dp"
                    />



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_mp4"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mp4"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="16dp"
                        android:switchMinWidth="20dp"
                        android:track="@drawable/switch_track"
                        android:thumb="@drawable/switch_thumb"
                        android:checked="true"
                        android:id="@+id/switch_mp4"
                        />

                </FrameLayout>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_avi"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="avi"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="16dp"
                        android:switchMinWidth="20dp"
                        android:track="@drawable/switch_track"
                        android:thumb="@drawable/switch_thumb"
                        android:checked="false"
                        android:id="@+id/switch_avi"
                        />

                </FrameLayout>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_flv"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="flv"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="16dp"
                        android:switchMinWidth="20dp"
                        android:track="@drawable/switch_track"
                        android:thumb="@drawable/switch_thumb"
                        android:checked="false"
                        android:id="@+id/switch_flv"
                        />

                </FrameLayout>



                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/frame_mkv"
                    android:layout_marginTop="15dp"
                    >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="mkv"
                        android:layout_marginLeft="25dp"
                        android:textColor="@color/text_black"
                        android:layout_gravity="center_vertical"
                        />

                    <Switch
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end|center_vertical"
                        android:layout_marginRight="16dp"
                        android:switchMinWidth="20dp"
                        android:track="@drawable/switch_track"
                        android:thumb="@drawable/switch_thumb"
                        android:checked="false"
                        android:id="@+id/switch_mkv"
                        />

                </FrameLayout>



            </LinearLayout>


            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_400"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频编码："
                android:textSize="14sp"
                android:textColor="@color/text_black"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="16dp"
                />


            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_264"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H.264"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:switchMinWidth="20dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:checked="true"
                    android:id="@+id/switch_264"
                    />

            </FrameLayout>




            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/frame_265"
                android:layout_marginTop="15dp"
                >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="H.265"
                    android:layout_marginLeft="25dp"
                    android:textColor="@color/text_black"
                    android:layout_gravity="center_vertical"
                    />

                <Switch
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end|center_vertical"
                    android:layout_marginRight="16dp"
                    android:switchMinWidth="20dp"
                    android:track="@drawable/switch_track"
                    android:thumb="@drawable/switch_thumb"
                    android:checked="false"
                    android:id="@+id/switch_265"
                    />

            </FrameLayout>


        </LinearLayout>


    </ScrollView>



</LinearLayout>